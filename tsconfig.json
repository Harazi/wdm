{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS", // For resolving without explicit extension
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "jsx": "react",
    "types": ["@types/wicg-file-system-access"],
    "baseUrl": ".", // This must be specified if "paths" is.
    "paths": {
      "@backend/*": ["./controller/*"] // This mapping is relative to "baseUrl"
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"],
}
